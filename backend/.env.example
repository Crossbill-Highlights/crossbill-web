# Database
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://crossbill:crossbill_dev_password@localhost:5432/crossbill

# SQLite (for local development without Docker)
# DATABASE_URL=sqlite:///./crossbill.db

# Generate secret key:
# openssl rand -hex 32
SECRET_KEY=123

# PostgreSQL password for docker-compose (production)
# CHANGE THIS IN PRODUCTION!
POSTGRES_PASSWORD=crossbill_secure_password

# Environment
ENVIRONMENT=development

# Port (for docker-compose)
PORT=8000

# CORS - Allow requests from these origins (comma-separated)
# Use "*" to allow all origins (default, useful for desktop apps like Obsidian)
# CORS_ORIGINS='["*"]''
# Or specify specific origins:
#CORS_ORIGINS='["http://localhost:3000","http://localhost:5173","http://localhost:8000"]'

# Admin setup (for first-time initialization)
# If ADMIN_PASSWORD is set and the admin user has no password, the password will be hashed and saved on startup
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your_secure_password_here

ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
REFRESH_TOKEN_SECRET_KEY=random secret
COOKIE_SECURE=true

# Password pepper - Secret value added to all passwords before hashing
# Generate with: openssl rand -hex 32
# IMPORTANT: Once set, do not change this value or existing passwords will stop working
# NOTE: Can be left empty or undefined if password peppering is not desired
PASSWORD_PEPPER=your_secret_pepper_here

# Disable or allow user registration. Defaults to true.
ALLOW_USER_REGISTRATION=true

# AI model configurations. Optional
AI_PROVIDER=ollama
OPENAI_BASE_URL=http://localhost:11434/v1
AI_MODEL_NAME=mistral-nemo:latest

AI_PROVIDER=openai
OPENAI_API_KEY=<apikey here>
AI_MODEL_NAME=gpt-5-nano

AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=<apikey here>
AI_MODEL_NAME=claude-haiku-4-5-20251001
